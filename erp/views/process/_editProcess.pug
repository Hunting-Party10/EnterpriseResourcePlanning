#editProcess.modal.fade(tabindex='-1', role='dialog', aria-labelledby='editProcessTitle', aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h2#editProcessTitle.modal-title Edit Process 
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
            .modal-body
                form.form#editProcessForm
                    .form-group
                        label.col-form-label.col-form-label-lg(for='name') Process Name
                        input#name.form-control.form-control-lg(type='name', autocomplete='off', value=`${process.process_name}`, placeholder='Enter Process name', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='id') Process Id
                        input#pid.form-control.form-control-lg(type='text', value=`${process.process_id}`, placeholder='Enter Process Id', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='description') Description
                        textarea#description.form-control.form-control-lg(type='text',placeholder='Process Description', rows="3", required)=process.description
                    .form-group
                        label.col-form-label.col-form-label-lg(for='workerId') Worker Id
                        input#workerId.form-control.form-control-lg(type='text', value=`${process.worker_id}`, placeholder='Enter Worker Id', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='machineId') Machine Id
                        input#machineId.form-control.form-control-lg(type='text',value=`${process.machine_id}`, placeholder='Enter Machine Id', required)
                    .form-group
                        input#Id(type='hidden', name='Id', value=`${process._id}`)
                        input#initialPid(type='hidden', name='initialPid', value=`${process.process_id}`)
                        input#defaultImg(type='hidden',name='defaultImg', value=`${process.process_thumbnail_location}`)
                    .form-group
                        label(for='thumbnail') New Process Thumbnail Image
                        input#thumbnail.form-control-file(type='file', accept='image/*', name='thumbnail')
            .modal-footer      
                .form-group
                    .input-group
                        input.btn.btn-primary.btn-lg(type='submit', name='submit', form='editProcessForm', value='Save Process').mb-2.mr-3#update
                        input.btn.btn-primary.btn-lg(type='submit', name='submit', form='editProcessForm', value='Save as new Process').mb-2.mr-3#saveAsNew
                        input.btn.btn-primary.btn-lg(type='reset', name='reset', form='editProcessForm', value='Reset').mb-2
