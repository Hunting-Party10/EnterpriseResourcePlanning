#createProcess.modal.fade(tabindex='-1', role='dialog', aria-labelledby='createProcessTitle', aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h2#createProcessTitle.modal-title Create Process 
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
            .modal-body
                form.form#createProcessForm
                    .form-group
                        label.col-form-label.col-form-label-lg(for='name') Process Name
                        input#name.form-control.form-control-lg(type='name', autocomplete='off', placeholder='Enter Process name', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='pid') Process Id
                        input#pid.form-control.form-control-lg(type='text', placeholder='Enter Process Id', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='description') Description
                        textarea#description.form-control.form-control-lg(type='text',placeholder='Process Description', rows="3", required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='workerId') Worker Id
                        input#workerId.form-control.form-control-lg(type='text', placeholder='Enter Worker Id', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='machineId') Machine Id
                        input#machineId.form-control.form-control-lg(type='text', placeholder='Enter Machine Id', required)
                    .form-group
                        label(for='thumbnail') Process Thumbnail Image
                        input#thumbnail.form-control-file(type='file', accept='image/*', name='thumbnail')
            .modal-footer
                    .form-group
                        .input-group
                            input.btn.btn-primary.btn-lg(type='submit', name='submit', form='createProcessForm', value='Save Process').mr-3.mb-2#add
                            input.btn.btn-primary.btn-lg(type='reset', name='reset',form='createProcessForm', value='Reset').mb-2
