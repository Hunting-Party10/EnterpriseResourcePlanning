#create-process-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='create-process-modalTitle', aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h2#create-process-modalTitle.modal-title Create Process 
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
            .modal-body
                form.form#create-process-form
                    .form-group
                        label.col-form-label.col-form-label-lg(for='create-process-name') Process Name
                        input#create-process-name.form-control.form-control-lg(type='name', autocomplete='off', placeholder='Enter Process name', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='create-process-id') Process Id
                        input#create-process-id.form-control.form-control-lg(type='text', placeholder='Enter Process Id', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='create-process-description') Description
                        textarea#create-process-description.form-control.form-control-lg(type='text',placeholder='Process Description', rows="3", required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='create-process-workerId') Worker Id
                        input#create-process-workerId.form-control.form-control-lg(type='text', placeholder='Enter Worker Id', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='create-process-machineId') Machine Id
                        input#create-process-machineId.form-control.form-control-lg(type='text', placeholder='Enter Machine Id', required)
                    .form-group
                        label(for='create-process-thumbnail') Process Thumbnail Image
                        input#create-process-thumbnail.form-control-file(type='file', accept='image/*', name='thumbnail')
            .modal-footer
                    .form-group
                        .input-group
                            input.btn.btn-primary.btn-lg(type='submit', name='submit', form='create-process-form', value='Create Process').mr-3.mb-2#create-process-submitBtn
                            input.btn.btn-primary.btn-lg(type='reset', name='reset',form='create-process-form', value='Reset').mb-2
