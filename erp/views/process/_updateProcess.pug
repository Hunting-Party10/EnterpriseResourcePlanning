#update-process-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='update-process-modalTitle', aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h2#update-process-modalTitle.modal-title update Process 
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
            .modal-body
                form.form#update-process-form
                    .form-group
                        label.col-form-label.col-form-label-lg(for='update-process-name') Process Name
                        input#update-process-name.form-control.form-control-lg(type='name', autocomplete='off' , placeholder='Enter Process name', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='update-process-id') Process Id
                        input#update-process-id.form-control.form-control-lg(type='text', placeholder='Enter Process Id', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='update-process-description') Description
                        textarea#update-process-description.form-control.form-control-lg(type='text',placeholder='Process Description', rows="3", required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='update-process-workerId') Worker Id
                        input#update-process-workerId.form-control.form-control-lg(type='text', placeholder='Enter Worker Id', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='update-process-machineId') Machine Id
                        input#update-process-machineId.form-control.form-control-lg(type='text', placeholder='Enter Machine Id', required)
                    .form-group
                        input#update-initial-processId(type='hidden', name='update-initial-processId')
                        input#update-process-defaultImgLoc(type='hidden',name='update-process-defaultImgLoc')
                        input#update-processId(type='hidden', name='update-processId')
                    .form-group
                        label(for='update-process-thumbnail') New Process Thumbnail Image
                        input#update-process-thumbnail.form-control-file(type='file', accept='image/*', name='thumbnail')
            .modal-footer      
                .form-group
                    .input-group
                        input.btn.btn-primary.btn-lg(type='submit', name='submit', form='update-process-form', value='Update Process').mb-2.mr-3#update-process-submitBtn
                        input.btn.btn-primary.btn-lg(type='submit', name='submit', form='update-process-form', value='Save as new Process').mb-2.mr-3#saveAsNew-process-submitBtn
                        input.btn.btn-primary.btn-lg(type='reset', name='reset', form='update-process-form', value='Reset').mb-2
