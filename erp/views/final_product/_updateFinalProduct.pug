#update-fp-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='update-fp-modalTitle', aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h2#update-fp-modalTitle.modal-title Update Final Product 
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
            .modal-body
                form.form
                    .form-group
                        label.col-form-label.col-form-label-lg(for='update-fp-name') Item Name
                        input#update-fp-name.form-control.form-control-lg(type='name', autocomplete='off', placeholder='Enter Item name', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='update-fp-id') Item Id
                        input#update-fp-id.form-control.form-control-lg(type='text', placeholder='Enter Item Id', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='update-fp-description') Description
                        textarea#update-fp-description.form-control.form-control-lg(type='text',placeholder='Item Description', rows="3", required)
                    .form-group
                        label(for='update-fp-thumbnail') New Item Thumbnail Image
                        input#update-fp-thumbnail.form-control-file(type='file', accept='image/*', name='thumbnail')
                    .form-group
                        input#update-finalProductId(type='hidden', name='update-finalProductId')
                        input#update-initial-fpId(type='hidden', name='update-initial-fpId')
                        input#update-fp-defaultImgLoc(type='hidden',name='update-fp-defaultImgLoc')
                    .form-group
                        .input-group
                            input.btn.btn-primary.btn-lg(type='submit', name='submit', value='Update').mb-2.mr-3#update-fp-submitBtn
                            input.btn.btn-primary.btn-lg(type='submit', name='submit', value='Save as new').mb-2.mr-3#saveAsNew-fp-submitBtn
                            input.btn.btn-primary.btn-lg(type='reset', name='reset', value='Reset').mb-2