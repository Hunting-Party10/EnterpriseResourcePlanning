extends ../base

block content
    button#create-material-btn(type='button', name='create-btn' ,data-toggle='modal', data-target='#create-material-modal').btn.btn-info.mt-3.mb-5.mr-5.btn-lg.float-right Create new Raw Material
    .container
        table.table.table-hover.mt-5.bg-white
            thead
            tr.table-primary
                th(scope='col') Raw Material Name 
                th(scope='col') Raw Material Id
                th(scope='col') Created At
                th(scope='col').text-center Details

            tbody
            each raw_material in raw_materials
                tr
                    td
                        i.fas.fa-hammer.fa-lg.mr-3   
                        =raw_material.raw_material_name 
                    td=raw_material.raw_material_id
                    td=raw_material.createdAt.toLocaleString()
                    td.text-center
                        a(href='/raw_material/'+raw_material._id)
                            i.fas.fa-share.fa-2x
    include _createRawMaterial

block scripts
    script(src='/resources/js/raw_material/create.raw_material.js')