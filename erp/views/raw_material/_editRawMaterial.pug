#editRawMaterial.modal.fade(tabindex='-1', role='dialog', aria-labelledby='editRawMaterialTitle', aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h2#editRawMaterialTitle.modal-title Edit Raw Material 
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
            .modal-body
                form.form#edit-raw_material
                    .form-group
                        label.col-form-label.col-form-label-lg(for='name') Material Name
                        input#name.form-control.form-control-lg(type='name', autocomplete='off', value=`${raw_material.raw_material_name}`, placeholder='Enter Material name', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='id') Material Id
                        input#mid.form-control.form-control-lg(type='text', placeholder='Enter Material Id', value=`${raw_material.raw_material_id}`, required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='description') Description
                        textarea#description.form-control.form-control-lg(type='text', placeholder='Material Description', rows="3", required)=raw_material.description
                    .form-group
                        label.col-form-label.col-form-label-lg(for='category') Category
                        #category
                            .form-check.form-check-inline
                                input#category1.form-check-input(type='checkbox', name='category1', value='Raw', checked=('Raw'== `${raw_material.category}`))
                                label.form-check-label(for='category1') Raw
                            .form-check.form-check-inline
                                input#category2.form-check-input(type='checkbox', name='category2', value='Consumable', checked=('Consumable'== `${raw_material.category}`))
                                label.form-check-label(for='category2') Consumable
                    .form-group
                        label.col-form-label.col-form-label-lg(for='quantity') Quantity
                        input#quantity.form-control.form-control-lg(type='number', placeholder='Enter Quantity' , value=`${raw_material.quantity}`, required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='measurement') Measurement
                        input#measurement.form-control.form-control-lg(type='text', placeholder='Enter Measurement', value=`${raw_material.measurement}`, required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='unit') Unit
                        select#unit.form-control.form-control-lg
                            option(value='Weight' selected=('Weight'== `${raw_material.unit}`)).unit Weight
                            option(value='Metrics' selected=('Metrics'== `${raw_material.unit}`)).unit Metrics
                            option(value='Volume' selected=('Volume'== `${raw_material.unit}`)).unit Volume
                            option(value='Quantity' selected=('Quantity'== `${raw_material.unit}`)).unit Quantity
                    .form-group
                        input#Id(type='hidden', name='Id', value=`${raw_material._id}`)
                        input#initialMid(type='hidden', name='initialMid', value=`${raw_material.raw_material_id}`)
                        input#defaultImg(type='hidden',name='defaultImg', value=`${raw_material.raw_material_thumbnail_location}`)
                    .form-group
                        label(for='thumbnail') New Raw Material Thumbnail Image
                        input#thumbnail.form-control-file(type='file', accept='image/*', name='thumbnail')
            .modal-footer
                .form-group
                    .input-group
                        input.btn.btn-primary.btn-lg(type='submit', name='submit',form='edit-raw_material', value='Update Raw Material ').mr-3#update
                        input.btn.btn-primary.btn-lg(type='submit', name='submit',form='edit-raw_material',  value='Save as new Raw Material').mr-3#saveAsNew
                        input.btn.btn-primary.btn-lg(type='reset', name='reset',form='edit-raw_material',  value='Reset')