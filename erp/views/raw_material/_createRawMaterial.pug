#create-material-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='create-material-modalTitle', aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h2#create-material-modalTitle.modal-title Create Raw Material 
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
            .modal-body
                form.form#create-material-form
                    .form-group
                        label.col-form-label.col-form-label-lg(for='create-material-name') Material Name
                        input#create-material-name.form-control.form-control-lg(type='name', autocomplete='off', placeholder='Enter Material name', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='create-material-id') Material Id
                        input#create-material-id.form-control.form-control-lg(type='text', placeholder='Enter Material Id', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='create-material-description') Description
                        textarea#create-material-description.form-control.form-control-lg(type='text', placeholder='Material Description', rows="3", required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='create-material-category') Category
                        #create-material-category
                            .form-check.form-check-inline
                                input#create-material-category1.form-check-input(type='checkbox', name='category1', value='Raw', checked=true)
                                label.form-check-label(for='create-material-category1') Raw
                            .form-check.form-check-inline
                                input#create-material-category2.form-check-input(type='checkbox', name='category2', value='Consumable')
                                label.form-check-label(for='create-material-category2') Consumable
                    .form-group
                        label.col-form-label.col-form-label-lg(for='create-material-quantity') Quantity
                        input#create-material-quantity.form-control.form-control-lg(type='number', placeholder='Enter Quantity', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='create-material-measurement') Measurement
                        input#create-material-measurement.form-control.form-control-lg(type='text', placeholder='Enter Measurement', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='create-material-unit') Unit
                        select#create-material-unit.form-control.form-control-lg
                            option(value='Weight').create-material-unitOption Weight
                            option(value='Metrics').create-material-unitOption Metrics
                            option(value='Volume').create-material-unitOption Volume
                            option(value='Quantity').create-material-unitOption Quantity
                    .form-group
                        label(for='create-material-thumbnail')  Raw Material Thumbnail Image
                        input#create-material-thumbnail.form-control-file(type='file', accept='image/*', name='thumbnail')
            .modal-footer
                .form-group
                    .input-group
                        input.btn.btn-primary.btn-lg(type='submit', name='submit', form='create-material-form', value='Save Raw Material').mb-2.mr-3#create-material-submitBtn
                        input.btn.btn-primary.btn-lg(type='reset', name='reset',form='create-material-form',  value='Reset').mb-2