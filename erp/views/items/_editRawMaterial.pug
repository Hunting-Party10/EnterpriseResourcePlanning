#editRawMaterial.modal.fade(tabindex='-1', role='dialog', aria-labelledby='editRawMaterialTitle', aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h2#editRawMaterialTitle.modal-title Edit Raw Material 
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
            .modal-body
                form.form#edit-raw_material
                    .form-group
                        label.col-form-label.col-form-label-lg(for='material-name') Material Name
                        input#material-name.form-control.form-control-lg(type='name', autocomplete='off' , placeholder='Enter Material name', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='material-id') Material Id
                        input#material-id.form-control.form-control-lg(type='text', placeholder='Enter Material Id', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='material-description') Description
                        textarea#material-description.form-control.form-control-lg(type='text', placeholder='Material Description', rows="3", required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='material-category') Category
                        #material-category
                            .form-check.form-check-inline
                                input#material-category1.form-check-input(type='checkbox', name='category1', value='Raw')
                                label.form-check-label(for='material-category1') Raw
                            .form-check.form-check-inline
                                input#material-category2.form-check-input(type='checkbox', name='category2', value='Consumable')
                                label.form-check-label(for='material-category2') Consumable
                    .form-group
                        label.col-form-label.col-form-label-lg(for='material-quantity') Quantity
                        input#material-quantity.form-control.form-control-lg(type='number', placeholder='Enter Quantity', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='material-measurement') Measurement
                        input#material-measurement.form-control.form-control-lg(type='text', placeholder='Enter Measurement', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='material-unit') Unit
                        select#material-unit.form-control.form-control-lg
                            option(value='Weight').material-unit Weight
                            option(value='Metrics').material-unit Metrics
                            option(value='Volume').material-unit Volume
                            option(value='Quantity').material-unit Quantity
                    .form-group
                        input#material-Id(type='hidden', name='material-Id')
                        input#initial-materialId(type='hidden', name='initial-MaterialId')
                        input#material-defaultImg(type='hidden',name='material-defaultImg')
                    .form-group
                        label(for='material-thumbnail') New Raw Material Thumbnail Image
                        input#material-thumbnail.form-control-file(type='file', accept='image/*', name='thumbnail')
            .modal-footer
                .form-group
                    .input-group
                        input.btn.btn-primary.btn-lg(type='submit', name='submit',form='edit-raw_material', value='Update Raw Material ').mr-3#material-update
                        input.btn.btn-primary.btn-lg(type='submit', name='submit',form='edit-raw_material',  value='Save as new Raw Material').mr-3#material-saveAsNew
                        input.btn.btn-primary.btn-lg(type='reset', name='reset',form='edit-raw_material',  value='Reset')