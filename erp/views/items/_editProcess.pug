#editProcess.modal.fade(tabindex='-1', role='dialog', aria-labelledby='editProcessTitle', aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h2#editProcessTitle.modal-title Edit Process 
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
            .modal-body
                form.form#editProcessForm
                    .form-group
                        label.col-form-label.col-form-label-lg(for='process-name') Process Name
                        input#process-name.form-control.form-control-lg(type='name', autocomplete='off', placeholder='Enter Process name', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='process-id') Process Id
                        input#process-id.form-control.form-control-lg(type='text', placeholder='Enter Process Id', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='process-description') Description
                        textarea#process-description.form-control.form-control-lg(type='text',placeholder='Process Description', rows="3", required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='process-workerId') Worker Id
                        input#process-workerId.form-control.form-control-lg(type='text', placeholder='Enter Worker Id', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='process-machineId') Machine Id
                        input#process-machineId.form-control.form-control-lg(type='text', placeholder='Enter Machine Id', required)
                    .form-group
                        input#process-Id(type='hidden', name='Id')
                        input#initial-processId(type='hidden', name='initial-processId')
                        input#process-defaultImg(type='hidden',name='defaultImg')
                    .form-group
                        label(for='process-thumbnail') New Process Thumbnail Image
                        input#process-thumbnail.form-control-file(type='file', accept='image/*', name='thumbnail')
            .modal-footer      
                .form-group
                    .input-group
                        input.btn.btn-primary.btn-lg(type='submit', name='submit', form='editProcessForm', value='Save Process').mb-2.mr-3#process-update
                        input.btn.btn-primary.btn-lg(type='submit', name='submit', form='editProcessForm', value='Save as new Process').mb-2.mr-3#process-saveAsNew
                        input.btn.btn-primary.btn-lg(type='reset', name='reset', form='editProcessForm', value='Reset').mb-2
