#editItem.modal.fade(tabindex='-1', role='dialog', aria-labelledby='editItemTitle', aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h2#editItemTitle.modal-title Edit Item 
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
            .modal-body
                form.form
                    .form-group
                        label.col-form-label.col-form-label-lg(for='name') Item Name
                        input#name.form-control.form-control-lg(type='name', autocomplete='off', value=`${item.item_name}`, placeholder='Enter Item name', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='iid') Item Id
                        input#iid.form-control.form-control-lg(type='text', value=`${item.item_id}`, placeholder='Enter Item Id', required)
                    .form-group
                        label.col-form-label.col-form-label-lg(for='description') Description
                        textarea#description.form-control.form-control-lg(type='text',placeholder='Item Description', rows="3", required)=item.description
                    .form-group
                        label(for='thumbnail') New Item Thumbnail Image
                        input#thumbnail.form-control-file(type='file', accept='image/*', name='thumbnail')
                    .form-group
                        input#Id(type='hidden', name='Id', value=`${item._id}`)
                        input#initialid(type='hidden', name='initialid', value=`${item.item_id}`)
                        input#defaultImg(type='hidden',name='defaultImg', value=`${item.item_thumbnail_location}`)
                    .form-group
                        .input-group
                            input.btn.btn-primary.btn-lg(type='submit', name='submit', value='Save Item').mb-2.mr-3#update
                            input.btn.btn-primary.btn-lg(type='submit', name='submit', value='Save as new Item').mb-2.mr-3#saveAsNew
                            input.btn.btn-primary.btn-lg(type='reset', name='reset', value='Reset').mb-2