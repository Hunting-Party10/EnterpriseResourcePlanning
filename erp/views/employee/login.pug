extends ../base
block content
    .container.mt-5.w-50.p-5.shadow.bg-white
        form.form
            .form-group
                h1 Login
            .form-group
                label.col-form-label.col-form-label-lg(for='username') Username
                input#username.form-control.form-control-lg(type='username', autocomplete='off', placeholder='Enter Username', required)
            .form-group
                label.col-form-label.col-form-label-lg(for='password') Password
                input#password.form-control.form-control-lg(type='password', placeholder='Password', required)
            .form-group
                .d-inline-flex
                    input.btn.btn-primary.btn-lg(type='submit', name='submit', value='Submit').mr-3#submit
                    input.btn.btn-primary.btn-lg(type='reset', name='reset', value='Reset')
            .form-group
                a(href='signup.html') Create your Account
block scripts
    script(src='/resources/js/login.js')